{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-console": ["warn", { "allow": ["error", "warn"] }],
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-undef": "error",
    "semi": ["error", "always"],
    "quotes": ["error", "single", { "avoidEscape": true }],
    "indent": ["warn", 2],
    "max-len": ["warn", { "code": 120 }],
    "prefer-const": "warn",
    "no-var": "error"
  },
  "globals": {
    "ComponentLoader": "readonly",
    "AssetPreloader": "readonly",
    "AscendersComposer": "readonly",
    "NftsGallery": "readonly",
    "EcosystemGraph": "readonly"
  }
}


